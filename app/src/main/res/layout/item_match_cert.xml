<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/md_grey_300" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_heightPercent="12%sh">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/cert"
            app:layout_heightPercent="7%sh"
            app:layout_marginLeftPercent="10%sw"
            app:layout_widthPercent="7%sh" />

        <TextView
            android:id="@+id/matchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="比赛证书"
            android:textColor="@color/md_black"
            app:layout_marginLeftPercent="8%sw"
            app:layout_textSizePercent="2.6%sh" />

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:iiv_color="@color/md_black"
            app:iiv_icon="ion-ios-arrow-right"
            app:layout_heightPercent="2.6%sh"
            app:layout_marginLeftPercent="4%sw"
            app:layout_marginRightPercent="10%sw"
            app:layout_widthPercent="2.6%sh" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/md_grey_300" />

</com.zhy.android.percent.support.PercentLinearLayout>


